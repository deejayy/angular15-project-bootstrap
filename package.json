{
  "name": "angular15-project-bootstrap",
  "version": "15.2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npx jest",
    "lint": "ng lint && npm run lint:styles",
    "lint:styles": "stylelint --config=./.stylelintrc.json **/*.scss",
    "lint-staged": "lint-staged -r",
    "prepare": "git config core.hooksPath ./git-hooks || exit 0",
    "precommit": "npm run lint-staged"
  },
  "private": true,
  "lint-staged": {
    "*.ts": [
      "eslint",
      "jest --findRelatedTests --passWithNoTests"
    ],
    "*.scss": "stylelint --config=./.stylelintrc.json"
  },
  "dependencies": {
    "@angular/animations": "^15.2.0",
    "@angular/cdk": "^15.2.0",
    "@angular/common": "^15.2.0",
    "@angular/compiler": "^15.2.0",
    "@angular/core": "^15.2.0",
    "@angular/forms": "^15.2.0",
    "@angular/localize": "^15.2.0",
    "@angular/material": "^15.2.0",
    "@angular/platform-browser": "^15.2.0",
    "@angular/platform-browser-dynamic": "^15.2.0",
    "@angular/router": "^15.2.0",
    "@auth0/angular-jwt": "^5.1.2",
    "@deejayy/api-caller": "^15",
    "@deejayy/reactive-config": "^15",
    "@deejayy/runtime-localizer": "^15",
    "@ngrx/effects": "^15.2.0",
    "@ngrx/store": "^15.2.0",
    "@ngrx/store-devtools": "^15.2.0",
    "immer": "^9",
    "lint-staged": "^13",
    "modern-css-reset": "^1.4.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.5.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "^15.0.0",
    "@angular-devkit/build-angular": "^15.2.0",
    "@angular-eslint/builder": "^15.2.0",
    "@angular-eslint/eslint-plugin": "^15.2.0",
    "@angular-eslint/eslint-plugin-template": "^15.2.0",
    "@angular-eslint/schematics": "^15.2.0",
    "@angular-eslint/template-parser": "^15.2.0",
    "@angular/cli": "~15.2.0",
    "@angular/compiler-cli": "^15.2.0",
    "@types/jasmine": "~4.3.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8.37.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27",
    "eslint-plugin-jsdoc": "^40",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^29",
    "jest-preset-angular": "^13",
    "stylelint": "^15",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^7",
    "stylelint-scss": "^4.6.0",
    "typescript": "~4.9.4"
  }
